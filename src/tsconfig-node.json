{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2020"],
    "allowJs": true,
    "outDir": "../build/node",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "exclude": [
    "build",
    "spec",
    "node_modules",
    "**/*.test.ts",
    "**/*.dom.ts"
  ]
}
